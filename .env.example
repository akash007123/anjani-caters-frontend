# API Configuration
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5000/api

# API Key for authenticated routes (admin functionality)
# This should match the API_KEY in your backend .env file
VITE_API_KEY=your-secret-api-key-here

# App Configuration
# App name and description
VITE_APP_NAME=Anjani Caters
VITE_APP_DESCRIPTION=Premium catering services for extraordinary events

# Contact Information
VITE_CONTACT_EMAIL=akashraikwar763@gmail.com
VITE_CONTACT_PHONE=+91 96855 33878
VITE_CONTACT_ADDRESS=Mumbai, India

# Social Media Links (optional)
VITE_FACEBOOK_URL=https://facebook.com/anjanicaters
VITE_INSTAGRAM_URL=https://instagram.com/anjanicaters
VITE_TWITTER_URL=https://twitter.com/anjanicaters
VITE_LINKEDIN_URL=https://linkedin.com/company/anjanicaters

# Google Maps Configuration
# Google Maps API Key for location features
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Business Hours
VITE_BUSINESS_HOURS_MON_FRI=9:00 AM - 8:00 PM
VITE_BUSINESS_HOURS_SATURDAY=9:00 AM - 8:00 PM
VITE_BUSINESS_HOURS_SUNDAY=10:00 AM - 6:00 PM

# Feature Flags
# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_BOOKING=true
VITE_ENABLE_QUOTE_REQUEST=true

# Analytics Configuration
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Environment
# Development, staging, or production
VITE_ENVIRONMENT=development

# Debug Mode
# Enable detailed logging in development
VITE_DEBUG=true

# Image Optimization
# Cloudinary or other image service configuration (optional)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_API_KEY=your-api-key
VITE_CLOUDINARY_API_SECRET=your-api-secret

# Payment Integration (if needed)
# Stripe public key for payment processing
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Email Configuration (for frontend notifications)
# Service email for contact forms
VITE_SERVICE_EMAIL=contact@elitecatering.com

# File Upload Configuration
# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=10485760
# Allowed file types for uploads
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Cache Configuration
# Cache TTL for API responses (in seconds)
VITE_CACHE_TTL=300
# Enable service worker for offline functionality
VITE_ENABLE_SERVICE_WORKER=false

# SEO Configuration
# Default meta tags
VITE_DEFAULT_TITLE=Anjani Caters - Premium Catering Services
VITE_DEFAULT_DESCRIPTION=Professional catering services for weddings, corporate events, and special occasions in Mumbai.
VITE_DEFAULT_KEYWORDS=catering, wedding catering, corporate catering, Mumbai catering, event catering

# Theme Configuration
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=light

# Localization
# Default language
VITE_DEFAULT_LANGUAGE=en
# Supported languages
VITE_SUPPORTED_LANGUAGES=en,hi

# Error Reporting
# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Monitoring
# Web Vitals tracking
VITE_ENABLE_WEB_VITALS=true